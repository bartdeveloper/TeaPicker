@page "/overview"
@using TeaPicker.Shared
@inject HttpClient Http

<PageTitle>Teas overview</PageTitle>

<h1>🍵 Teas overview</h1>

<p>This component shows the list of teas. </p>

    <button class="btn btn-primary" @onclick="ShowCreateMode">Create new</button>

    <br/><br/>

    <div class="col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
        @if (SelectedTea is not null)
        {
        <EditForm class="container" Model="SelectedTea" OnValidSubmit="TeaValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label for="title">Title</label>
                <InputText id="title" @bind-Value="SelectedTea.Name" placeholder="Tea name..." class="form-control" />
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <InputTextArea id="description" @bind-Value="SelectedTea.Description" placeholder="Description..." class="form-control" rows="7" />
            </div>

            <div class="form-group">
                <label for="title">Brewing temp</label>
                <InputNumber id="title" @bind-Value="SelectedTea.BrewingTemp" placeholder="Brewing temp..." class="form-control" />
            </div>

            <div class="form-group">
                <label for="title">Brewing time</label>
                <InputNumber id="title" @bind-Value="SelectedTea.BrewingTime" placeholder="Brewing time..." class="form-control" />
            </div>

            <div class="form-group">
                <label for="title">Image uri</label>
                <InputText id="title" @bind-Value="SelectedTea.ImageUri" placeholder="Image uri..." class="form-control" />
            </div>

            <br/>

            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
                <div class="col">
                    <button type="button" @onclick="DeleteTea" class="btn btn-danger float-right">Delete</button>
                </div>
            </div>
        </EditForm>
        }
    </div>

    <br/>

    <div class="row">
        @if (teas is null)
        {
            <p><em>Loading list...</em></p>
        }
        else 
        {

            @foreach (var tea in teas)
            {
                <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-4">
                    <div class="margin5 card @(SelectedTea?.Id == tea.Id ? "bg-light" : "")">
                        <div class="card-body">
                            <h3 class="card-title">@tea.Name</h3>
                            <p><b>Brewing temp:</b> @tea.BrewingTemp ℃ <b>time:</b> @tea.BrewingTime min</p>
                            <img src="@tea.ImageUri" class="tea-img">
                            <p class="card-text">@tea.Description</p>
                            <a href="/overview" @onclick="() => GetTeaDetails(tea.Id)"><u>Edit</u></a>
                        </div>
                    </div>
                </div>
            }

        }
            
    </div>

    <br/>

    Source of teas description: https://www.artfultea.com/tea-wisdom-1/types-of-tea-a-comprehensive-guide

    <Footer Text="2022" />

@code {

    private List<Tea> teas = new();
    private Tea SelectedTea;
    private bool IsCreatingMode;

    protected override async Task OnInitializedAsync()
    {
        teas = await GetTeas();
    }

    async Task<List<Tea>> GetTeas()
    {
        return await Http.GetFromJsonAsync<List<Tea>>("Tea/list");
    }

    async Task GetTeaDetails(int id)
    {
        SelectedTea = new();
        SelectedTea = await Http.GetFromJsonAsync<Tea>($"Tea/{id}");
        IsCreatingMode = false;
    }

    async Task DeleteTea()
    {
        var response = Http.DeleteAsync($"Tea/{SelectedTea.Id}");
        if (response.IsCompletedSuccessfully)
        {
            teas = await GetTeas();
        }
    }

    async Task TeaValidSubmit()
    {
        HttpResponseMessage response;

        if (IsCreatingMode)
        {
            response = await Http.PostAsJsonAsync<Tea>("Tea", SelectedTea);
        }
        else
        {
            response = await Http.PutAsJsonAsync<Tea>("Tea", SelectedTea);
        }

        if (response.IsSuccessStatusCode)
        {
            SelectedTea = await response.Content.ReadFromJsonAsync<Tea>();
            teas = await GetTeas();
        }

    }

    void ShowCreateMode()
    {
        SelectedTea = new();
        IsCreatingMode = true;
    }
}
